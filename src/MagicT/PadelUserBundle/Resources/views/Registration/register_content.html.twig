{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    
    <div class="registratieformulier">
    	<h2>Registreren</h2>
    	
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_username">Gebruikersnaam * :</label>	
    			</div>
    			<div class="col-sm-8">
	                {{ form_widget(form.username, { 'attr' : { 'placeholder': 'Gebruikersnaam', 'name':'username'}}) }}
    			</div>
    		</div>
    	</div>
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_naam">Naam * :</label>	
    			</div>
    			<div class="col-sm-8">
					{{ form_widget(form.naam) }}
    			</div>
    		</div>
    	</div>

    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_voornaam">Voornaam * :</label>	
    			</div>
    			<div class="col-sm-8">
    				{{ form_widget(form.voornaam) }}
    			</div>
    		</div>
    	</div>
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_adres">Adres * :</label>	
    			</div>
    			<div class="col-sm-8">
    				<div class="col-xs-12 nopadding">
    					{{ form_widget(form.adres) }}
	                </div>
					<div class="col-xs-4 nopadding">
		    			{{ form_widget(form.postcode) }}
		    		</div>
		    		<div class="col-xs-8 nopadding ">
		    			{{ form_widget(form.gemeente) }}
		    		</div>
	                
    			</div>
    		</div>
    	</div>
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_telefoon">Telefoon :</label>	
    			</div>
    			<div class="col-sm-8">
    				{{ form_widget(form.telefoon) }}
    			</div>
    		</div>
    	</div>
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_man">Geslacht :</label>	
    			</div>
    			<div class="col-sm-8">
    				{{ form_widget(form.man) }}
    			</div>
    		</div>
    	</div>
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_telefoon">Geboortedatum * :</label>	
    			</div>
    			<div class="col-sm-8">
    				{{ form_widget(form.geboortedatum) }}
    			</div>
    		</div>
    	</div>
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_email">Emailadres * :</label>	
    			</div>
    			<div class="col-sm-8">
    					{{ form_widget(form.email, {'attr':{'placeholder': 'Emailadres'}}) }}
    			</div>
    			{{ form_errors(form.email) }}
    		</div>
    	</div>
    	<div class="row">
    		<div class="form-group">
    			<div class="col-sm-4">
    				<label for="fos_user_registration_form_password">Wachtwoord * :</label>	
    			</div>
    			<div class="col-sm-8">
					<div class="col-xs-6 nopadding">
						{{ form_widget(form.plainPassword.first, {'attr':{'placeholder': 'Wachtwoord'}}) }}
					</div>
					<div class="col-xs-6 nopadding">
						{{ form_widget(form.plainPassword.second, {'attr':{'placeholder': 'Controle'}}) }}
					</div>
    			</div>
    		</div>
    	</div>

    </div>
    <div>
    	{{ form_widget(form._token) }}
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
